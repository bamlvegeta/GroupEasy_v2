<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/cyan_dark"
    android:orientation="horizontal"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:elevation="30dp"
    >

        <TextView
        android:layout_width="55dp"
        android:layout_height="46dp"
        android:text="Active Events"
        style="@android:style/TextAppearance.Medium"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="-10dp"
        app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/textView4"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp" />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="You have no active events in this group"-->
        <!--app:layout_constraintRight_toLeftOf="@+id/imageView8"-->
        <!--android:layout_marginRight="59dp"-->
        <!--style="@android:style/TextAppearance.Small"-->
        <!--android:layout_marginTop="12dp"-->
        <!--app:layout_constraintTop_toBottomOf="@+id/textView4" />-->

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/user2"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="6dp"
        android:id="@+id/circleImageView3"
        app:layout_constraintVertical_bias="0.625"
        app:layout_constraintLeft_toRightOf="@+id/textView4"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:background="@color/red"
        android:src="@drawable/rectangle_shape"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/circleImageView3"
        app:layout_constraintBottom_toBottomOf="@+id/circleImageView3"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/circleImageView3"
        app:layout_constraintTop_toTopOf="@+id/circleImageView3"
        android:layout_marginTop="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_right"
        android:layout_gravity="top"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:id="@+id/imageView8" />



</android.support.constraint.ConstraintLayout>
