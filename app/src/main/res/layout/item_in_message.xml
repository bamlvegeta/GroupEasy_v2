<?xml version="1.0" encoding="utf-8"?>

<!--This xml being inflated by MessageAdapter for when user sends a message
    -->

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingRight="0dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-6dp"
        android:src="@drawable/single_user"
        app:layout_constraintTop_toBottomOf="@+id/message_user"
        tools:layout_editor_absoluteX="0dp"
         />

    <TextView
        android:id="@+id/message_user"
        style="@android:style/TextAppearance.Small"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imageView2"
        android:maxLength="25"
        android:maxLines="1"
        android:paddingRight="10dp"
        android:text="@string/harsh_p"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message_text"
        style="@android:style/TextAppearance.Holo.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_user"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@+id/imageView2"
        android:background="@drawable/rounded_corner_grey_color"
        android:ellipsize="end"
        android:maxHeight="300dp"
        android:maxLines="5"
        android:maxWidth="280dp"
        android:minWidth="50dp"
        android:paddingBottom="5dp"
        android:paddingEnd="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="@string/whats_the_craic"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
         />

    <!-- <TextView
         android:visibility="gone"
         android:textSize="8sp"
         android:id="@+id/message_time"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@id/message_text"
         android:text="10:56pm"
         android:layout_toRightOf="@+id/imageView2"
         tools:layout_editor_absoluteY="53dp"
         tools:layout_editor_absoluteX="43dp" />-->

</android.support.constraint.ConstraintLayout>