<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_gravity="center"
        android:padding="10dp"
        android:background="@drawable/oval_group_shape"
        android:src="@drawable/ic_default_groups"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_width="60dp"
        android:layout_height="60dp"/>

    <LinearLayout
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="0dp">

        <TextView
            android:layout_marginLeft="8dp"
            android:textColor="@color/black"
            android:textSize="@dimen/group_header_text_size"
            android:text="Family Katta get together"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <TextView
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/primary_text_size"
            android:text="Admin: Harsh Phoujdar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"/>

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:padding="10dp"
                android:textSize="@dimen/header_text_size"
                android:gravity="center"
                android:text="4"
                android:background="@drawable/rectangle_shape"
                android:layout_width="40sp"
                android:layout_height="40sp"/>
            <TextView
                android:padding="4dp"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/header_text_size"
                android:gravity="center"
                android:text="4"
                android:background="@drawable/circle_shape"
                android:layout_width="40sp"
                android:layout_height="40sp"/>

            <TextView
                android:padding="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="@dimen/header_text_size"
                android:gravity="center"
                android:text="2"
                android:background="@drawable/hexagon_shape"
                android:layout_width="40sp"
                android:layout_height="40sp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>