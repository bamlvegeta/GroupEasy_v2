<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentEnd="true"
    android:layout_alignParentRight="true"
    android:layout_gravity="end"
    android:id="@+id/my_constrained_message_out"
    android:layout_marginTop="10dp"
    android:elevation="6dp">

    <TextView
        android:visibility="invisible"
        android:id="@+id/message_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-KyLKH37AM3hzxzMA2SM"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/message_text"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/message_text"
        app:layout_constraintBottom_toBottomOf="@+id/message_text"
        android:layout_marginBottom="8dp" />

    <!--<de.hdodenhof.circleimageview.CircleImageView-->
    <!--android:id="@+id/imageView1"-->
    <!--android:layout_width="40dp"-->
    <!--android:layout_height="40dp"-->
    <!--android:layout_alignParentLeft="true"-->
    <!--android:src="@drawable/user2"-->
    <!--app:layout_constraintTop_toTopOf="parent"-->
    <!--android:layout_marginTop="0dp"-->
    <!--android:layout_marginRight="0dp"-->
    <!--app:layout_constraintRight_toRightOf="parent" />-->

    <TextView
        android:id="@+id/message_text"
        style="@android:style/TextAppearance.Holo.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:background="@drawable/rounded_corner_primary_color"
        android:maxHeight="300dp"
        android:maxWidth="280dp"
        android:paddingBottom="5dp"
        android:paddingEnd="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        android:paddingStart="10dp"
        android:paddingTop="5dp"
        android:text="Whats the craic"
        app:layout_constraintHorizontal_bias="0.958"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/message_time"
        android:layout_width="40dp"
        android:layout_height="10dp"
        android:layout_alignBaseline="@+id/message_text"
        android:layout_gravity="end"
        android:layout_toLeftOf="@+id/message_text"
        android:maxLength="7"
        android:text="10:56pm"
        android:textSize="8dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/message_text"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/message_text" />

</android.support.constraint.ConstraintLayout>