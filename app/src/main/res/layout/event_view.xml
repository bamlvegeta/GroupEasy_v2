<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardElevation="4dp"
        >

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/event_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:src="@drawable/rectangle_shape"
            android:background="@drawable/editborder"
            android:layout_marginStart="8dp" />
            <TextView
                android:id="@+id/event_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List:"
                app:layout_constraintLeft_toRightOf="@+id/event_logo"
                android:layout_marginLeft="15dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="15dp" />
            <TextView
                android:id="@+id/event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="35"
                android:text="This will be the name of the event"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintLeft_toRightOf="@+id/event_type"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Auhor:"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/event_name"
                android:id="@+id/textView"
                app:layout_constraintLeft_toRightOf="@+id/event_logo"
                android:layout_marginLeft="126dp"
                android:layout_marginStart="126dp" />

            <TextView
                android:id="@+id/author_of_event"
                android:layout_width="87dp"
                android:layout_height="17dp"
                android:text="harsh"
                app:layout_constraintLeft_toRightOf="@+id/textView"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="7dp"
                app:layout_constraintTop_toBottomOf="@+id/event_name"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="328dp"
                android:layout_height="120dp"
                android:background="@color/lemon_yellow"
                tools:mockup_opacity="10"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/imageView"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp">
            </ImageView>

            <de.hdodenhof.circleimageview.CircleImageView

                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user2"
                android:background="@drawable/editborder"
                android:padding="2dp"
                app:layout_constraintRight_toLeftOf="@+id/textView2"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="@+id/imageView"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="13dp"
                android:id="@+id/profileImage1"
                app:layout_constraintHorizontal_bias="0.3" />

                <TextView
                android:text="Sample"
                    android:layout_height="18dp"
                    android:layout_width="241dp"
                    android:id="@+id/textView1"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toTopOf="@+id/imageView"
                    android:layout_marginRight="30dp"
                    app:layout_constraintRight_toRightOf="@+id/imageView"
                    android:layout_marginEnd="30dp" />

            <View
                android:layout_width="295dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView"
                android:layout_marginTop="47dp"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                android:id="@+id/view"
                app:layout_constraintHorizontal_bias="0.529" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileImage2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/user2"
                android:background="@drawable/editborder"
                android:padding="2dp"
                app:layout_constraintRight_toLeftOf="@+id/textView2"
                android:layout_marginRight="8dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="13dp"
                app:layout_constraintTop_toBottomOf="@+id/profileImage1"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="0.0" />

            <TextView
                android:text="Sample2"
                android:layout_height="19dp"
                android:layout_width="242dp"
                android:id="@+id/textView2"
                android:layout_marginTop="59dp"
                android:layout_marginRight="29dp"
                app:layout_constraintRight_toRightOf="@+id/imageView"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toTopOf="@+id/imageView" />

            <View
                android:layout_width="295dp"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textView1"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textView2"
                app:layout_constraintHorizontal_bias="0.529"
                app:layout_constraintVertical_bias="0.583"
                android:id="@+id/view2" />

            <ImageButton
                android:id="@+id/full_event"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_down_arrow"
                android:background="#80000000"
                app:layout_constraintBottom_toBottomOf="@+id/imageView"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="0dp"
                app:layout_constraintTop_toBottomOf="@+id/view"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="@+id/imageView"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="@+id/imageView"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintVertical_bias="0.428"
                android:padding="-10dp"
                android:layout_margin="-10dp"/>

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>



</android.support.constraint.ConstraintLayout>