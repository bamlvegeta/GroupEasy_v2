<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f6f6f6"
    android:focusable="false"
    android:focusableInTouchMode="true"
    android:layout_height="match_parent"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    tools:context="example.com.groupeasy.activities.CreateRosterActivity">

    <LinearLayout
        android:elevation = "20dp"
        android:gravity="center|left"
        android:background="@color/white"
        android:id="@+id/toolbar_layout"
        android:orientation="horizontal"
        android:layout_height="56dp"
        android:layout_width="match_parent">

        <ImageView
            android:id="@+id/iv_close"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_close"
            android:layout_width="32dp"
            android:layout_height="32dp"/>

        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/very_large_text_size"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="New Roster"
            android:layout_height="wrap_content"
            android:layout_width="0dp"/>

        <TextView
            android:id="@+id/save_roster"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:textSize="@dimen/group_header_text_size"
            android:layout_gravity="center"
            android:text="SAVE"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </LinearLayout>

    <ScrollView
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_below="@id/toolbar_layout"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <EditText
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:textSize="@dimen/group_header_text_size"
                android:hint="Event Name"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <EditText
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:textSize="@dimen/group_header_text_size"
                android:hint="Location"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"/>

            <info.hoang8f.android.segmented.SegmentedGroup
                android:layout_margin="@dimen/activity_vertical_margin"
                android:id="@+id/segmented2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_toolbar"
                android:padding="5dp"
                android:orientation="horizontal"
                segmentedgroup:sc_border_width="1dp"
                segmentedgroup:sc_corner_radius="5dp"
                segmentedgroup:sc_tint_color="#F62459"
                segmentedgroup:sc_checked_text_color="#ffffff">

                <RadioButton
                    android:id="@+id/seg_button_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:text="Day"
                    android:padding="5dp"
                    style="@style/RadioButton"
                    />

                <RadioButton
                    android:id="@+id/seg_button_week"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:text="Week"
                    style="@style/RadioButton"
                    />

                <RadioButton
                    android:id="@+id/seg_button_month"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="15sp"
                    android:text="Month"
                    style="@style/RadioButton"
                    />
            </info.hoang8f.android.segmented.SegmentedGroup>

            <LinearLayout
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/header_text_size"
                        android:text="From "
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corners_shape"
                        android:id="@+id/layout_from_date"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_from_date"
                            android:layout_marginLeft="8dp"
                            android:textSize="@dimen/header_text_size"
                            android:text="02/02/2017"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar_grey600_48dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/header_text_size"
                        android:text="Time"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <LinearLayout
                        android:id="@+id/layout_from_time"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corners_shape"
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_from_time"
                            android:layout_marginLeft="8dp"
                            android:textSize="@dimen/header_text_size"
                            android:text="10:00 AM"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_timer_grey600_48dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/header_text_size"
                        android:text="To "
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corners_shape"
                        android:id="@+id/layout_to_date"
                        android:padding="8dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_to_date"
                            android:layout_marginLeft="8dp"
                            android:textSize="@dimen/header_text_size"
                            android:text="02/02/2017"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_marginRight="8dp"
                            android:layout_marginLeft="14dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_calendar_grey600_48dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_marginLeft="24dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="12dp"
                        android:textSize="@dimen/header_text_size"
                        android:text="Time "
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"/>

                    <LinearLayout
                        android:id="@+id/layout_to_time"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/rounded_corners_shape"
                        android:padding="8dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_to_time"
                            android:layout_marginLeft="8dp"
                            android:textSize="@dimen/header_text_size"
                            android:text="10:00 AM"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"/>

                        <ImageView
                            android:layout_marginLeft="8dp"
                            android:layout_marginRight="4dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_timer_grey600_48dp"
                            android:layout_width="24dp"
                            android:layout_height="24dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <CheckBox
                android:textSize="@dimen/group_header_text_size"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:text="All Day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textColor="@color/black"
                android:textSize="@dimen/group_header_text_size"
                android:layout_marginLeft="24dp"
                android:text="Allot To"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <Spinner
                android:entries="@array/allot_to_array"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <View
                android:layout_marginTop="6dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="2dp"/>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
