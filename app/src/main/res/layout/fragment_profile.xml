<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        >

        <TextView
        android:textSize="@dimen/group_header_text_size"
        android:gravity="start"
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:padding="10dp"/>
    <TextView
        android:id="@+id/user_name"
        android:textSize="@dimen/group_header_text_size"
        android:gravity="start"
        android:text="UserUserUserUserUserUserUser"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:maxLength="15"/>

        <TextView
            android:id="@+id/user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="StatusStatusStatusStatusStatusStatus"
            android:padding="10dp"
            android:maxLength="25"
            />
    </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right"
                    android:layout_weight="1">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/displayPic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:padding="6dp"
                    android:src="@drawable/ic_profile"
                    android:background="@drawable/oval_group_shape"

                    />
                </LinearLayout>

            </LinearLayout>


    <LinearLayout
        android:id="@+id/polls"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_corners_shape"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_margin="16dp"
            android:textSize="@dimen/group_header_text_size"
            android:text="Total Polls Created "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/rectangle_shape"
            android:textColor="#670309"
            android:textColorHint="#670309"
            android:text="22"
            android:gravity="center"
            android:textSize="@dimen/group_header_text_size"
            android:layout_height="36dp"
            android:layout_width="36dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/lists"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_corners_shape"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_margin="16dp"
            android:textSize="@dimen/group_header_text_size"
            android:text="Total Lists Created "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/circle_shape"
            android:text="8"
            android:gravity="center"
            android:textSize="@dimen/group_header_text_size"
            android:layout_height="36dp"
            android:layout_width="36dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/rosters"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_corners_shape"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_margin="16dp"
            android:textSize="@dimen/group_header_text_size"
            android:text="Total Roasters Created "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/hexagon_shape"
            android:text="12"
            android:gravity="center"
            android:textSize="@dimen/group_header_text_size"
            android:layout_height="36dp"
            android:layout_width="36dp"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fav_events"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_corners_shape"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:layout_margin="16dp"
            android:textSize="@dimen/group_header_text_size"
            android:text="Favourite Events "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_heart"
            android:text="4"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="@dimen/group_header_text_size"
            android:layout_height="36dp"
            android:layout_width="36dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/help"
        android:gravity="center|left"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/rounded_corners_shape"
        android:layout_height="wrap_content"
        android:layout_width="match_parent">
        <TextView
            android:id="@+id/log_in_out"
            android:layout_margin="16dp"
            android:textSize="@dimen/group_header_text_size"
            android:text="Logout "
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/white"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_arrow_break"
            android:text="4"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="@dimen/group_header_text_size"
            android:layout_height="36dp"
            android:layout_width="36dp"/>
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>